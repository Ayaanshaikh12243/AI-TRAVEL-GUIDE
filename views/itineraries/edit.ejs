<%- include('../partials/header') %>

<h1>Edit Trip Title</h1>
<p class="lead">You are editing: <strong><%= itinerary.title %></strong></p>

<div class="card shadow-sm">
    <div class="card-body">
         <form action="/itineraries/<%= itinerary._id %>?_method=PUT" method="POST">
            <div class="mb-3">
                <label for="title" class="form-label">Itinerary Title</label>
                <input type="text" class="form-control" id="title" name="title" value="<%= itinerary.title %>" required>
            </div>
            <button type="submit" class="btn btn-primary">Save Changes</button>
            <a href="/itineraries/<%= itinerary._id %>" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>

<%- include('../partials/footer') %>